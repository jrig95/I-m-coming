/* pages/details/details.wxss */

.event-banner {
  width: 100%;
  /* ???? */
  height: 40vh;
  justify-content: center;
}

.event-container {
  border-radius: 30rpx;
  background-color: teal;
}


.event-description {
  font-family: 'Lato', sans-serif;
  font-size: 25rpx;
  height: 7vh;
  width: 80%;
  border:1rpx;
  padding-left:20rpx;
  padding-right:20rpx;
}


.description-header {
 font-family: 'Lato', sans-serif;
 font-size:30rpx;
 padding-left: 20rpx;
 margin-top:10rpx;
 margin-bottom:10rpx;
}

.event-title {
 font-family: 'Lato', sans-serif;
 font-size: 50rpx;
 font-weight:bold;
 justify-content: center;
 padding-left: 20rpx;
 padding-top:20rpx;
 margin-bottom:10rpx;
}

.event-details{
  display: flexbox;
  font-size: 30rpx;
  font-family: 'Lato', sans-serif;
}
.event-date {
 padding-left: 20rpx;
 margin-top:10rpx;
 margin-bottom:10rpx;
}

.event-time {
  padding-left: 20rpx;
  margin-top:10rpx;
  margin-bottom:10rpx;
 }

 .location {
  font-family: 'Lato', sans-serif;
  display:flex;
  margin:unset;
  align-items: flex-end;
  justify-content: space-between;
  font-size: 30rpx;
  padding-right:10rpx;
  padding-left:20rpx;
  margin-top:10rpx;
  margin-bottom:10rpx;
 }

.item-form {
  font-family: 'Lato', sans-serif;
  display:flex;
  border-width:2rpx;
  border-style:dotted;
  
  flex-direction: row;
  justify-content: center;
  padding-left:20rpx;
  padding-right:20rpx;
  justify-content: space-evenly;
  align-items: flex-start;
  /* align-items: center; */
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}

.food-form{
border: 10rpx, white;
}

.btn-map {
  margin:unset;
  display: flex;
  align-items: flex-end;
  width:70rpx;
  justify-content: center;
 background-color: white;
  color: black;
 border: 2px solid #f9ed69;
 font-size: 25rpx;
 font-family: 'Lato', sans-serif;
 text-align: center;
 /* display: inline-block; */
 box-shadow: 0 8px 10px 0 rgba(0,0,0,0.1);
 /* padding: 10rpx 20rpx; */
 border-radius: 20rpx;
 /* height:100px; */
}

.RSVP {
 display:inline-flex;
 position: fixed;
 flex-direction: row;
 justify-content: space-evenly;
 align-items: center;
 bottom: 1em;
 background-color: white;
}

.item-area{
  display:flex;
  justify-content: space-evenly;
  align-items: center;
  padding-bottom: 7rpx;
  padding-top: 7rpx;
}