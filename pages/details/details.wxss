.event-banner {
  width: 100%;
  /* ???? */
  height: 40vh;
  justify-content: center;
}

.event-description {
  font-family: 'Lato', sans-serif;
  font-size: 25rpx;
  height: 10vh;
  width: 80%;
  border:1rpx;
  padding-left:20rpx;
  padding-right:20rpx;
}


.description-header {
 font-family: 'Lato', sans-serif;
 font-size:30rpx;
 padding-left: 20rpx;
 margin-top:10rpx;
 margin-bottom:10rpx;
}

.event-title {
 font-family: 'Lato', sans-serif;
 font: size 100rpx;
 font-weight:bold;
 justify-content: center;
 padding-left: 20rpx;
 margin-top:20rpx;
 margin-bottom:10rpx;
}

.event-details{
  display: flexbox;
  font-size: 30rpx;
  font-family: 'Lato', sans-serif;
}
.event-date {
 padding-left: 20rpx;
 margin-top:10rpx;
 margin-bottom:10rpx;
}

.event-time {
  padding-left: 20rpx;
  margin-top:10rpx;
  margin-bottom:10rpx;
 }

 .location {
  font-family: 'Lato', sans-serif;
  display:flex;
  align-items: flex-end;
  justify-content: space-evenly;
  font-size: 30rpx;
  /* justify-content: space-between; */
  /* padding-left: 20rpx;
  padding-right:20rpx; */
  margin-top:10rpx;
  margin-bottom:10rpx;
 }

.item-form {
  font-family: 'Lato', sans-serif;
  display:flex;
  border-width:2rpx;
  border-style:dotted;
  
  flex-direction: row;
  justify-content: center;
  padding-left:20rpx;
  padding-right:20rpx;
  justify-content: space-evenly;
  align-items: flex-start;
  /* align-items: center; */
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.food-form{
border: 10rpx, grey
