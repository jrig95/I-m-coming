<!--pages/details/details.wxml-->

<cover-image class="event-banner" mode="aspectFill" src="{{Event.image}}"></cover-image>
<view class="event-creator">
<view class="event-title">{{Event.name}}</view>
<image class="avatar" src="{{User.avatar}}"></image>
</view>

<view class= "event-details">
 <view class="date_and_time">{{Event.date_and_time}}</view>
</view>

<view class="description-header">{{Event.description}}</view>
<view class="event-description"></view>


 <view class="location">
  <view>Location</view>
  <button class="btn-map" bindtap="openMap" style="margin:unset;width:130rpx;">See Map</button>
 </view>


 <!-- <scroll-view scroll-y="true" style="position:absolute; top:0; left:0; right:0; bottom:0;">
 </scroll-view> -->


<view class="item-form">
<button bindtap="goToFood" class="food-form" >Food</button>
<button bindtap="goToDrinks" class="drink-form"  >Drinks</button>
<button bindtap="goToEquip" class="equip-form">Equipment</button>
</view>

<view wx:if="{{tab_name === 'Food'}}">
  
  <view class="avatar-items" wx:for="{{Food}}" id="{{Food.id}}" wx:for-item="Foods">
    <image class="avatar" src="{{User.avatar}}"></image>
    {{Foods.food}}
    

  </view>
 </view>


<view wx:if="{{tab_name === 'Drinks'}}">
  <view class="avatar-items" wx:for="{{Drinks}}" id="{{Drinks.id}}" wx:for-item="Drinks">
    <image class="avatar" src="{{User.avatar}}"></image>
    {{Drinks.drink}}
  </view>
</view>

<view wx:if="{{tab_name === 'Equipment'}}">
  <view class="avatar-items" wx:for="{{Equipment}}" id="{{Equipment.id}}" wx:for-item="Tools">
    <image class="avatar" src="{{User.avatar}}"></image>
    {{Tools.equipment}}
  </view>
</view>

<view class="bottom-buttons">
 <view class="RSVP">
  <button class="btn-share"style="margin:unset;width:auto;">SHARE</button>
  <button class="btn-RSVP" bindtap="goToPopup" style="margin:unset;width:auto;">RSVP</button>
 </view>
</view>

